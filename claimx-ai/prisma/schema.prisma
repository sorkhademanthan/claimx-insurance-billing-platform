// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ðŸ‘‡ 1. ENUMS (New for Phase 4)
enum ClaimStatus {
  PENDING
  APPROVED
  REJECTED
  INVESTIGATION
}

enum IncidentType {
  ACCIDENT
  THEFT
  NATURAL_DISASTER
}

// ðŸ‘‡ 2. MODELS
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("user")
  
  policies  Policy[]
  claims    Claim[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Policy {
  id             String   @id @default(uuid())
  policyNumber   String   @unique
  type           String
  coverageAmount Int
  startDate      DateTime
  endDate        DateTime

  userId         String
  user           User     @relation(fields: [userId], references: [id])
  
  claims         Claim[]

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Claim {
  id           String       @id @default(uuid()) // ðŸ‘ˆ This was likely missing!
  status       ClaimStatus  @default(PENDING)
  description  String
  incidentDate DateTime
  incidentType IncidentType
  
  // AI Fields
  riskScore    Int?
  isFlagged    Boolean      @default(false)
  aiAnalysis   String?

  policyId     String
  policy       Policy       @relation(fields: [policyId], references: [id])

  userId       String
  user         User         @relation(fields: [userId], references: [id])
  
  evidence     Evidence[]   // <--- Add this relation

  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
}

model Evidence {
  id        String   @id @default(uuid())
  url       String
  fileName  String
  fileType  String
  claimId   String
  claim     Claim    @relation(fields: [claimId], references: [id])
  createdAt DateTime @default(now())
}