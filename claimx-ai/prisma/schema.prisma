// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("user")
  
  policies  Policy[]
  claims    Claim[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Policy {
  id             String   @id @default(uuid())
  policyNumber   String   @unique
  type           String
  coverageAmount Int
  startDate      DateTime
  endDate        DateTime

  userId         String
  user           User     @relation(fields: [userId], references: [id])
  
  claims         Claim[]

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Claim {
  id           String   @id @default(uuid())
  status       String   @default("PENDING")
  description  String
  incidentDate DateTime
  incidentType String
  
  policyId     String
  policy       Policy   @relation(fields: [policyId], references: [id])

  userId       String
  user         User     @relation(fields: [userId], references: [id])

  // ðŸ‘‡ The Relation needed for the error
  evidence     Evidence[]

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// ðŸ‘‡ The Table needed for the error
model Evidence {
  id        String   @id @default(uuid())
  url       String
  fileName  String
  fileType  String?
  
  claimId   String
  claim     Claim    @relation(fields: [claimId], references: [id])

  createdAt DateTime @default(now())
}